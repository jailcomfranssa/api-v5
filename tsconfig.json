{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./dist",

        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,

        "sourceMap": true,
        "removeComments": true,

        "resolveJsonModule": true,
        "types": ["node"]
    },
    "include": ["src", "generated"],
    "exclude": ["node_modules", "dist"]
}
