{
    "compilerOptions": {
        /* Diretórios */
        "rootDir": "./src",
        "outDir": "./dist",

        /* Ambiente */
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",

        /* Tipos */
        "types": ["node"],

        /* Segurança */
        "strict": true,
        "forceConsistentCasingInFileNames": true,

        /* Compatibilidade */
        "esModuleInterop": true,
        "skipLibCheck": true,

        /* Debug */
        "sourceMap": true,

        /* Build */
        "removeComments": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
